doctype html
html
  head
    if title
      title= title
    else
      title= 'Nursing Simulation System'
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='IE-edge')
    link(href='/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='/css/font-awesome.min.css', rel='stylesheet', media='screen')
    link(href='/css/ie10-viewport-bug-workaround.css' rel='stylesheet')
    script(src='http://code.jquery.com/jquery.js')
    script(src='js/bootstrap.min.js')
    block header
  body
    .container-fluid(style='height: 8em; background-color: #002147')
      header
        a(href='/')
          img(src='/img/uri_nursing_logo.png', alt='University of Rhode Island: College of Nursing', style='float: left; width: 14em; height: 8em')
        h1(style='color: white; padding-top: 1em; margin: 0px') Nursing Simulation System
        p(style='text-align: right; padding-right: 0.5em')
          if (!user)
            a(href='/login', style='color: white; text-decoration: none') Admin Login
          if (user)
            a(href='/admin', style='color: white; text-decoration: none') Dashboard |
            a(href='/logout', style='color: white; text-decoration: none')  Logout
    block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='js/ie10-viewport-bug-workaround.js')
    script window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')
    block scripts
