doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(href='/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='/css/main.css', rel='stylesheet', media='screen')
    link(href='/css/font-awesome.min.css', rel='stylesheet', media='screen')
    script(src='http://code.jquery.com/jquery.js')
    script(src='js/bootstrap.min.js')
    script(src='js/main.js')
    block header
  body
    .container-fluid(style='height: 8em; background-color: #002147')
      header
        a(href='/')
          img(src='/img/uri_nursing_logo.png', alt='University of Rhode Island: College of Nursing', style='float: left; width: 14em; height: 8em')
        h1(style='color: white; padding-top: 1em; margin: 0px') Nursing Simulation System
        p(style='text-align: right; padding-right: 0.5em')
          if (!user)
            a(href='/login', style='color: white; text-decoration: none') Admin Login
          if (user)
            a(href='/logout', style='color: white; text-decoration: none') Logout
    block content
